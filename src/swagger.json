            ],
            "responses": {
                "200": {
                    "description": "Litecoin :",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Quotation"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Erro na cotação do litecoin!"
                }
            }
        }
      },
      "/quotations/doge": {
        "get": {
            "summary": "Buscar a cotação do dogecoin",
            "description": "Irá listar apenas a cotação do dogecoin",
            "tags": [
                "Cotação"
            ],
            "responses": {
                "200": {
                    "description": "Dogecoin: ",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Quotation"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Erro na cotação do dogecoin!"
                }
            }
        }
      }
    },
    "components": {
        "schemas": {
          "User": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            },
            "required": ["name", "email", "password"]
          },
          "Quotation": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "bid": {
                "type": "string"
              },
              "create_date": {
                "type": "string",
                "format": "date-time"
              },
              "account_id": {
                "type": "string"
              }
            },
            "required": ["code", "bid", "create_date", "account_id"]
          }
        },
        "securitySchemes": {
          "bearer_token": {
            "type": "http",
            "description": "Coloque seu token aqui!",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        }
      },
      "security": [
        {
          "bearer_token": []
        }
      ],
      "x-swagger-ui": {
        "css": "/src/custom-swagger.css"
      } 
  }